{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/**/*", "src/whisper"],
  "exclude": ["dist", "node_modules", "test"]
}
